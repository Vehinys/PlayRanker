{% extends 'base.html.twig' %}

{% block title %}Admin{% endblock %}

{% block body %}

    <div class="container mx-auto p-2 pt-4">

        <h1 class="text-3xl p-7 text-center font-bold">Dashboard Admin</h1>
        
        <div class="flex justify-content gap-1 mb-7">
            <a href="{{ path('type_new') }}" class="bg-blue-500 mr-3 hover:bg-blue-700 text-white font-bold py-1 px-2 rounded">Add a type</a>
            <a href="{{ path('category.add') }}" class="bg-blue-500 mr-3 hover:bg-blue-700 text-white font-bold py-1 px-2 rounded">Add a category</a>
            <a href="{{ path('platform.add') }}" class="bg-blue-500 mr-3 hover:bg-blue-700 text-white font-bold py-1 px-2 rounded">Add a platform</a>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-2">
            <div class="bg-white shadow-md rounded p-2">
                <h2 class="text-xl font-bold mb-1"> List of types </h2>
                <div class="divide-y divide-gray-200">
                {% for type in types %}
                    <div class="py-2">
                        <h3 class="text-md font-bold">{{ type.name }}</h3>
                        <div class="flex justify-content">
                            <a href="{{ path('type_edit', {'id': type.id}) }}" class="mr-3 bg-orange-500 hover:bg-orange-700 text-white py-0.5 px-1.5 rounded"><i class="fas fa-pencil-alt"></i></a>
                            <form action="{{ path('type_delete', {'id': type.id}) }}" method="post" onsubmit="return confirm('Are you sure you want to delete this type ?');">
                                <input type="hidden" name="_method" value="DELETE">
                                <button type="submit" class=" bg-red-500 hover:bg-red-700 text-white py-0.5 px-1.5 rounded"><i class="fas fa-trash-alt"></i></button>
                            </form>
                        </div>
                    </div>
                {% endfor %}
                </div>
            </div>

            <div class="bg-white shadow-md rounded p-2">
                <h2 class="text-xl font-bold mb-1">List of categories</h2>
                <div class="divide-y divide-gray-200">
                {% for category in categories %}
                    <div class="py-2">
                    <h3 class="text-md font-bold">{{ category.name }}</h3>
                    <div class="flex justify-content">
                        <a href="{{ path('category.edit', {'categoryId': category.id}) }}" class="mr-3 bg-orange-500 hover:bg-orange-700 text-white py-0.5 px-1.5 rounded"><i class="fas fa-pencil-alt"></i></a>
                        <form action="{{ path('category.delete', {'categoryId': category.id}) }}" method="post" onsubmit="return confirm('Are you sure you want to delete this category?');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ category.id) }}">
                        <button type="submit" class=" bg-red-500 hover:bg-red-700 text-white py-0.5 px-1.5 rounded"><i class="fas fa-trash-alt"></i></button>
                        </form>
                    </div>
                    </div>
                {% endfor %}
                </div>
            </div>
            <div class="bg-white shadow-md rounded p-2 columns-1 md:columns-2 lg:columns-1 gap-2">
                <h2 class="text-xl font-bold mb-1">List of platforms</h2>
                {% for platform in platforms %}
                <div class="py-2 ">
                    <h3 class="text-md font-bold">{{ platform.name }}</h3>
                    <div class="flex justify-content gap-1">
                    <a href="{{ path('platform.edit', {'platformId': platform.id}) }}" class="mr-3 bg-orange-500 hover:bg-orange-700 text-white py-0.5 px-1.5 rounded"><i class="fas fa-pencil-alt"></i></a>
                    <form action="{{ path('platform.delete', {'platformId': platform.id}) }}" method="post" onsubmit="return confirm('Are you sure you want to delete this platform?');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ platform.id) }}">
                        <button type="submit" class=" bg-red-500 hover:bg-red-700 text-white py-0.5 px-1.5 rounded"><i class="fas fa-trash-alt"></i></button>
                    </form>
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>
    </div>

{% endblock %}
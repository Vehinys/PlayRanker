{% extends 'base.html.twig' %}

{% block title %}Admin Dashboard{% endblock %}

{% block body %}
<div class="flex h-screen bg-[#97b4e0]">
    <!-- Sidebar -->
    <div class="w-64 bg-[#0C1D36] text-white">
        <div class="p-6">
            <h1 class="text-2xl font-bold">PlayRanker Admin</h1>
        </div>
        <nav class="mt-6">
            <a href="{{ path('admin') }}" class="block py-2 px-4 hover:bg-blue-700">My lists</a>

            <a href=" {{ path('type_new') }} " class="block py-2 px-4 hover:bg-blue-700">Add Type</a>
            <a href=" {{ path('category.add') }} " class="block py-2 px-4 hover:bg-blue-700">Add Category</a>
            <a href=" {{ path('platform.add') }} " class="block py-2 px-4 hover:bg-blue-700">Add Platform</a>

            <a href="{{ path('contact_admin') }}" class="block py-2 px-4 hover:bg-blue-700">My message</a>
        </nav>
    </div>

    <!-- Main Content -->
    <div class="flex-1 overflow-x-hidden overflow-y-auto">
        <div class="container mx-auto px-6 py-8">
            <h2 class="text-3xl font-semibold text-[#ECC33E] mb-6">Dashboard Overview</h2>
            
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                <!-- Types Card -->
                <div class="bg-[#0C1D36] rounded-lg shadow-md overflow-hidden">
                    <div class="px-6 py-4 bg-[#0C1D36] text-white">
                        <h3 class="text-lg font-semibold">Types</h3>
                    </div>
                    <div class="p-6">
                        <button class="w-full bg-blue-500 hover:bg-blue-600 text-white py-2 px-4 rounded mb-4" id="dropdown-types">
                            Show Types <i class="fas fa-caret-down ml-2"></i>
                        </button>
                        <div class="hidden" id="dropdown-types-menu">
                            {% for type in types %}
                                <div class="flex justify-between items-center py-2 border-b">
                                    <span class="text-white">{{ type.name|capitalize }}</span>
                                    <div class="flex space-x-2">
                                        <a href="{{ path('type_edit', {'id': type.id}) }}" class="text-yellow-500 hover:text-yellow-600"><i class="fas fa-pencil-alt"></i></a>
                                        <form action="{{ path('type_delete', {'id': type.id}) }}" method="post" onsubmit="return confirm('Are you sure you want to delete this type?');">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete') }}">
                                            <input type="hidden" name="_method" value="DELETE">
                                            <button type="submit" class="text-red-500 hover:text-red-600"><i class="fas fa-trash-alt"></i></button>
                                        </form>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                </div>

                <!-- Categories Card -->
                <div class="bg-[#0C1D36] rounded-lg shadow-md overflow-hidden">
                    <div class="px-6 py-4 bg-[#0C1D36] text-white">
                        <h3 class="text-lg font-semibold">Categories</h3>
                    </div>
                    <div class="p-6">
                        <button class="w-full bg-blue-500 hover:bg-blue-600 text-white py-2 px-4 rounded mb-4" id="dropdown-categories">
                            Show Categories <i class="fas fa-caret-down ml-2"></i>
                        </button>
                        <div class="hidden" id="dropdown-categories-menu">
                            {% for category in categories %}
                                <div class="flex justify-between items-center py-2 border-b">
                                    <span class="text-white">{{ category.name|capitalize }}</span>
                                    <div class="flex space-x-2">
                                        <a href="{{ path('category.edit', {'categoryId': category.id}) }}" class="text-yellow-500 hover:text-yellow-600"><i class="fas fa-pencil-alt"></i></a>
                                        <form action="{{ path('category.delete', {'categoryId': category.id}) }}" method="post" onsubmit="return confirm('Are you sure you want to delete this category?');">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ category.id) }}">
                                            <button type="submit" class="text-red-500 hover:text-red-600"><i class="fas fa-trash-alt"></i></button>
                                        </form>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                </div>

                <!-- Platforms Card -->
                <div class="bg-[#0C1D36] rounded-lg shadow-md overflow-hidden">
                    <div class="px-6 py-4 bg-[#0C1D36] text-white">
                        <h3 class="text-lg font-semibold">Platforms</h3>
                    </div>
                    <div class="p-6">
                        <button class="w-full bg-blue-500 hover:bg-blue-600 text-white py-2 px-4 rounded mb-4" id="dropdown-platforms">
                            Show Platforms <i class="fas fa-caret-down ml-2"></i>
                        </button>
                        <div class="hidden" id="dropdown-platforms-menu">
                            {% for platform in platforms %}
                                <div class="flex justify-between items-center py-2 border-b">
                                    <span class="text-white">{{ platform.name|capitalize }}</span>
                                    <div class="flex space-x-2">
                                        <a href="{{ path('platform.edit', {'platformId': platform.id}) }}" class="text-yellow-500 hover:text-yellow-600"><i class="fas fa-pencil-alt"></i></a>
                                        <form action="{{ path('platform.delete', {'platformId': platform.id}) }}" method="post" onsubmit="return confirm('Are you sure you want to delete this platform?');">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ platform.id) }}">
                                            <button type="submit" class="text-red-500 hover:text-red-600"><i class="fas fa-trash-alt"></i></button>
                                        </form>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function() {
        const dropdowns = [
            { buttonId: "dropdown-types", menuId: "dropdown-types-menu" },
            { buttonId: "dropdown-categories", menuId: "dropdown-categories-menu" },
            { buttonId: "dropdown-platforms", menuId: "dropdown-platforms-menu" }
        ];

        dropdowns.forEach(dropdown => {
            const dropdownButton = document.getElementById(dropdown.buttonId);
            const dropdownMenu = document.getElementById(dropdown.menuId);

            dropdownButton.addEventListener("click", function() {
                dropdowns.forEach(d => {
                    const menu = document.getElementById(d.menuId);
                    if (menu !== dropdownMenu) {
                        menu.classList.add("hidden");
                    }
                });
                dropdownMenu.classList.toggle("hidden");
            });

            document.addEventListener("click", function(event) {
                if (!event.target.closest(`#${dropdown.menuId}`) && !event.target.closest(`#${dropdown.buttonId}`)) {
                    dropdownMenu.classList.add("hidden");
                }
            });
        });
    });
</script>
{% endblock %}
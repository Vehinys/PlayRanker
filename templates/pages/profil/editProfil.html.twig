{% extends 'base.html.twig' %}

{% block title %} Edit my profile {% endblock %}

{% block body %}

<div class="container-profil">
    <div class="profil-container">
        <div class="profil-section">
            <div class="profil-card">
                <div class="profil-title">
                    <h1>Edit my profile</h1>
                </div>
                <div class="profil-card-content">
                    <div class="profil-user-info">
                            {% if user %}
                                {% if user.avatar %}
                                    <img src="{{ user.avatar }}" alt="Photo de Profil de {{ user.pseudo }}" class="profil-image">
                                {% else %}
                                    <img src="https://img.freepik.com/vecteurs-premium/icone-profil-avatar-par-defaut-image-utilisateur-medias-sociaux-icone-avatar-gris-silhouette-profil-vide-illustration-vectorielle_561158-3383.jpg" alt="Photo de Profil par dÃ©faut" class="profil-image">
                                {% endif %}

                        <div class="profil-user-details">

                            {% if user %}
                                {{ form_start(form) }}

                                <p><b>Pseudo : </b> <span>{{ user.pseudo }}</span> {{ form_widget(form.pseudo, { 'attr': { 'class': 'input-profil-box', 'placeholder': 'New nickname' } }) }}</p>
                                <p><b>Email :  </b> <span>{{ user.email }}</span>  {{ form_widget(form.email,  { 'attr': { 'class': 'input-profil-box', 'placeholder': 'New email'    } }) }}</p>
                                <p><b>Avatar : </b>                                {{ form_widget(form.avatar, { 'attr': { 'class': 'input-profil-box', 'placeholder': 'New avatar'   } }) }}</p>
                            {% else %}
                                <p>No users found. Please login.</p>
                            {% endif %}
                            {% endif %}
                        </div>
                    </div>
                        <div>
                            <!-- Remplacement du lien <a> par un bouton de type submit -->
                            <button class="increment-button" type="submit">
                                <img src="data:image/png;base64,"/>
                            </button>

                            {{ form_end(form) }}

                            <button class="increment-button" onclick="window.location.href='{{ path('profil') }}'">
                                <img src="data:image/png;base64,"/>
                            </button>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

{% endblock %}

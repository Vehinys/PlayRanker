{% extends 'base.html.twig' %}

{% block title %} My Profile {% endblock %}

{% block body %}
<div>
    <section class="container-profil">
        <section class="profil-container">
            <div class="profil-section">
                <div class="profil-card">
                    <div class="profil-title">
                        <h2>My Profile</h2>
                    </div>
                    <div class="profil-card-content">
                        <div class="profil-user-info">
                            {% if user %}
                                {% if user.avatar %}
                                    <img src="{{ user.avatar }}" alt="Photo de Profil de {{ user.pseudo }}" class="profil-image">
                                {% else %}
                                    <img src="https://img.freepik.com/vecteurs-premium/icone-profil-avatar-par-defaut-image-utilisateur-medias-sociaux-icone-avatar-gris-silhouette-profil-vide-illustration-vectorielle_561158-3383.jpg" alt="Photo de Profil par dÃ©faut" class="profil-image">
                                {% endif %}
                                <div class="profil-user-details">
                                    <p><b>Pseudo : </b> <span>{{ user.pseudo }}</span></p>
                                    <p><b>Email  : </b> <span>{{ user.email }}</span></p>
                                    <p><b>Number of messages: </b><span></span></p>
                                    <p><b>Number of favorites: </b><span></span></p>
                                </div>
                            {% else %}
                                <p>No users found. Please log in</p>
                            {% endif %}
                        </div>
                    </div>
                    <div>
                        <button class="increment-button" onclick="window.location.href='{{ path('edit_profile') }}'">
                            <img src="data:image/png;base64,"/>
                        </button>
                        <button class="increment-button" onclick="if(confirm('Are you sure you want to delete your account?')) { window.location.href='{{ path('delete_profile') }}'; }">
                            <img src="data:image/png;base64,"/>
                        </button>
                    </div>
                </div>
            </div>
        </section>
    </section>

    <!-- Section des favoris de l'utilisateur -->
    <section class="container-profil">
        <section class="profil-container">
            <div class="profil-section">
                <div class="profil-card">
                    <div class="profil-title">
                        <h2>My Favorites</h2>
                    </div>
                    <div class="profil-card-content">
                        <a class="increment-button" href="{{ path('jeux') }}">Search Game</a>
                    </div>
                </div>
            </div>
        </section>
    </section>

    <!-- Section de la liste de jeux de l'utilisateur -->
    <section class="container-profil">
        <section class="profil-container">
            <div class="profil-section">
                <div class="profil-card">
                    <div class="profil-title">
                        <h2>My Gamelist</h2>
                    </div>
                    <div class="profil-card-content">
                    </div>
                </div>
            </div>
        </section>
    </section>
</div>
{% endblock %}

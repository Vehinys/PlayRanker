{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}

<div class="bg-inscription bg-common">
  <div class="form-container">
    <h1 class="register-title">Inscription</h1>
    
    {# Affichage des erreurs globales du formulaire #}
    {{ form_errors(registrationForm) }}
    
    {# DÃ©but du formulaire #}
    {{ form_start(registrationForm) }}

      {# Champ email avec les erreurs #}
      <div class="input-box">
        {{ form_label(registrationForm.email, 'Email') }}
        {{ form_widget(registrationForm.email, { 'attr': { 'class': 'input-box-email', 'placeholder': 'Entrez votre email' } }) }}
        {{ form_errors(registrationForm.email) }}
      </div>

      {# Champ mot de passe avec les erreurs #}
      <div class="input-box">
        {{ form_label(registrationForm.password.first, 'Mot de passe') }}
        {{ form_widget(registrationForm.password.first, { 'attr': { 'class': 'input-box-mdp', 'placeholder': 'Mot de passe' } }) }}
        {{ form_errors(registrationForm.password.first) }}
      </div>

      {# Champ confirmation du mot de passe avec les erreurs #}
      <div class="input-box">
        {{ form_label(registrationForm.password.second, ' Confirmez votre mot de passe') }}
        {{ form_widget(registrationForm.password.second, { 'attr': { 'class': 'input-box-mdp', 'placeholder': 'Confirmer le mot de passe' } }) }}
        {{ form_errors(registrationForm.password.second) }}
      </div>

      {# Champ des conditions d'utilisation avec les erreurs #}
      <div class="form-group">
        <label>
          {{ form_widget(registrationForm.agreeTerms) }}
          <a class="required" href="#">J'accepte les conditions d'utilisation</a>
        </label>
        {{ form_errors(registrationForm.agreeTerms) }}
      </div>

      {# Bouton de soumission #}
      <button type="submit" class="btn-register">S'inscrire</button>
      <div>
        <small> * = Champs obligatoire</small>
      </div>
    {{ form_end(registrationForm) }}
  </div>
</div>

{% endblock %}

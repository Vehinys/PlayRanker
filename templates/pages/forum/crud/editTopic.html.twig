{% extends 'base.html.twig' %}

{% block body %}

<section class="min-h-screen flex items-center justify-center">
    <div class="max-w-2xl mx-auto p-10 bg-white rounded-lg shadow-lg">
        <h1 class="text-2xl font-semibold text-gray-800 mb-6">Créer un nouveau post</h1>
        {{ form_start(form, {'attr': {'class': 'space-y-4'}}) }}
            <div class="bg-gray-50 p-4 rounded-md border border-gray-200">
                {{ form_row(form.title, {'attr': {'id': 'create_post_title', 'class': 'w-full border border-gray-300 rounded-md p-4 focus:outline-none focus:ring-2 focus:ring-blue-500'}}) }}
            </div>
            <div>
                <button type="submit" class="w-full bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 rounded">
                    Créer
                </button>
            </div>
        {{ form_end(form) }}
    </div>
</section>
{% endblock %}
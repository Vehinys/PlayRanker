{% extends 'base.html.twig' %}

{% block title %}PlayRanker Forum - Edit Comment{% endblock %}

{% block body %}
<div class="bg-[#97b4e0] min-h-screen flex items-center justify-center">
    <div class="bg-[#09172b] border border-[#ECC33E] rounded-lg p-8 max-w-2xl w-full">
        <h1 class="text-3xl font-bold text-[#ECC33E] mb-6 text-center">Edit Comment</h1>
        
        {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}
        
        <div class="space-y-4">
            {{ form_widget(form, {'attr': {'class': 'w-full p-3 rounded bg-[#0C1D36] text-[#0C1D36] border border-[#ECC33E] focus:outline-none focus:ring-2 focus:ring-[#ECC33E]'}}) }}
        </div>
        
        <button type="submit" class="w-full bg-[#ECC33E] text-[#0C1D36] font-bold py-3 rounded hover:bg-[#ebf1ff] transition duration-300">
            Save changes
        </button>
        
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}

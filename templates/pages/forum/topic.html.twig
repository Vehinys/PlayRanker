{% extends 'base.html.twig' %}

{% block title %} FORUM - TOPIC {% endblock %}

{% block body %}

<div class='flex p-12'> 
    <section class="container_forum">
            <table>   
                {% for category in categories %}
                <tr>
                    <td class='text-4xl pb-5 pt-5 text-[#ECC33E] hover:text-[#ebf1ff] '> <a href="{{path('topic', {id:category.id})}}"> {{category.name}} </a> </td>
                </tr>
                {% endfor %}
            </table>
    </section>

    <section class="ml-7">
        <div class="border-l-2 border-[#ebf1ff] bg-[#ebf1ff] h-full flex"></div>
    </section>

    <section class="mx-7">
            {% for topic in topics %}
                <a class"" href="{{path('post', {id:topic.id})}}"> 
                    <div class="text-[#000000]  rounded bg-[#ebf1ff] py-4 px-4 my-2 hover:bg-[#09172b] hover:text-[#ebf1ff]">
                        <h3> {{ topic.title }} </h3>  
                        <div> By  {{ topic.user.pseudo}} -  {{ topic.createdAt | date ('Y M d H:i') }} </div>
                        {# <p> {{ topic.content }} </p> #}
                        <div>
                            <button class="color-black" onclick="">
                                    <img src="data:image/png;base64,">
                                </button>
                            <button class="" onclick="">
                                <img src="data:image/png;base64,">
                            </button>
                        </div>
                    </div>
                </a> 
            {% endfor %}
    </section>

    
</div>

    <section class="text-center p-4">
        <button class="bg-[#ebf1ff] text-[#0C1D36] py-2 px-4 rounded hover:bg-[#ECC33E]">
            Create a new topic
        </button>
    </section>

{% endblock %}
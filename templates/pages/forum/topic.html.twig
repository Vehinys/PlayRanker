{% extends 'base.html.twig' %}

{% block title %} FORUM - TOPIC {% endblock %}

{% block body %}

<div class='flex p-12'>  
    <section class="flex">
        <table>

            {# Boucle à travers chaque catégorie #}   
            {% for category in categories %}
            <tr>  
                <td class='text-4xl pb-5 pt-5 text-[#ECC33E] hover:text-[#ebf1ff]'>  

                    {# Lien vers le topic correspondant avec l'identifiant de la catégorie #}
                    <a href="{{ path('topic', { id: category.id }) }}">

                        {# Affiche le nom des catégories #} 
                        {{ category.name }}  
                    </a>
                </td>
            </tr>  
            {% endfor %} 
        </table>  
    </section>

    <!-- Séparateur entre les sections -->
    <section class="ml-7"> 
        <div class="border-l-2 border-[#ebf1ff] h-full flex"></div>  
    </section>

    <section class="mx-7">
        <div>
            {% for topic in topics %}
                <div class="bg-[#dbe1f0] text-[#000000] rounded bg-[#ebf1ff] py-4 px-8 my-3 hover:bg-[#09172b] hover:text-[#ebf1ff]">
                    <a href="{{ path('post', {id: topic.id}) }}">
                        <h3 class="font-black text-2xl mb-5">{{ topic.title }}</h3>  
                        <div class="flex items-center justify-between">
                            <div> 
                                By {{ topic.user.pseudo }} - {{ topic.createdAt | date('Y M d H:i') }}
                            </div>
                            <div class="flex pl-7">
                                <button class="color-black mr-2">
                                    <img src="data:image/png;base64,">
                                </button>
                            <div>
                                <form action="{{ path('delete_topic', { id: topic.id }) }}" method="POST" onsubmit="return confirm('Are you sure you want to delete this topic?');">
                                    <button type="submit" class="color-black mr-2">Delete topic</button>
                                </form>
                            </div>
                            </div>
                        </div>
                    </a>
                </div>
            {% endfor %}
        </div>
    </section>


    
</div>

    <section class="text-center p-4">
        <button class="bg-[#ebf1ff] text-[#0C1D36] py-2 px-4 rounded hover:bg-[#ECC33E]">
            Create a new topic
        </button>
    </section>

{% endblock %}
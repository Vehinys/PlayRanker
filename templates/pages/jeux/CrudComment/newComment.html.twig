{% extends 'base.html.twig' %}

{% block title %}New Comment{% endblock %}

{% block body %}
    <div class=" container mx-auto px-4 py-8">
        <h1 class="text-3xl font-bold text-[#0C1D36] mb-6">Create New Comment</h1>

        {{ form_start(form, {'attr': {'class': 'bg-[#09172b] shadow-lg rounded-lg px-10 pt-8 pb-10 mb-6 border border-[#ECC33E]'}}) }}
            <div class=" mb-4">
                {{ form_widget(form, {'attr': {'class': 'w-full bg-[#0C1D36] text-white border border-[#ECC33E] rounded-lg py-3 px-4 focus:outline-none focus:ring-2 focus:ring-[#ECC33E] focus:border-transparent'}}) }}
            </div>
            <div class="flex items-center justify-between">
                <button type="submit" class="bg-[#ECC33E] hover:bg-[#ebf1ff] text-[#0C1D36] font-semibold py-3 px-6 rounded-lg transition duration-300 focus:outline-none focus:ring-2 focus:ring-[#ECC33E]">
                    Save
                </button>
            </div>
        {{ form_end(form) }}
    </div>
{% endblock %}

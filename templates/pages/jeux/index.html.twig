{% extends 'base.html.twig' %}

{% block title %}Jeux{% endblock %}

{% block body %}

<div class="container">

    <h1 class="page-title">Les jeux :</h1>

    <div class="game-card-container">
        {% for game in games.results %}
            <div class="game-card">
                <div class="game-card-header">
                    <p>{{ game.name }}</p>
                </div>
                    <img class="game-card-image" src="{{ game.background_image }}" alt="{{ game.name }}">
                    <div class="game-card-body">
                </div>
                <div class="button-container">
                    <a href="{# {{ path('game_detail', {'id': game.id}) }}#}" class="detail-button">DÃ©tail</a> 
                    <a href="#" class="favorite-button">
                        <i class="fas fa-heart"></i>
                    </a>
                </div>
            </div>
        {% endfor %}
    </div>

</div>

{% endblock %}

